<%= flash[:notice] %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p><strong>Title:</strong>
<%= @book.title %></p>
<p><strong>Body:</strong>
<%= @book.body %></p>
<p><%= link_to 'Edit', edit_book_path(@book.id) %> | 
	<%= link_to 'Back', books_path %></p>